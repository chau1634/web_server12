            <!-- Add this script at the end of your HTML body -->
            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    var ngayCells = document.querySelectorAll('.product-table tbody td:nth-child(2)');
                    var tongtienCells = document.querySelectorAll('.product-table tbody td:nth-child(3)');
                    var doanhThuTheoNgay = {};
                    var currentDate = moment().format('DD/MM/YYYY');
                    var currentMonth = moment().format('MM/YYYY');
                    var firstDayOfMonth = moment(currentMonth, 'MM/YYYY').startOf('month');
                    var lastDayOfMonth = moment(currentMonth, 'MM/YYYY').endOf('month');
                    var labels = [];
                    var data = [];

                    ngayCells.forEach(function (cell, index) {
                        var formattedDate = moment(cell.textContent.trim()).format('DD/MM/YYYY');
                        var cellValue = parseFloat(tongtienCells[index].textContent);

                        if (doanhThuTheoNgay.hasOwnProperty(formattedDate)) {
                            doanhThuTheoNgay[formattedDate].tongThu += cellValue;
                            doanhThuTheoNgay[formattedDate].rows.push({ ngay: formattedDate, thu: cellValue });
                        } else {
                            doanhThuTheoNgay[formattedDate] = {
                                tongThu: cellValue,
                                rows: [{ ngay: formattedDate, thu: cellValue }]
                            };
                        }
                    });
                    labels = Object.keys(doanhThuTheoNgay).sort();

                    var tbody = document.querySelector('.product-table tbody');
                    tbody.innerHTML = '';
                    Object.keys(doanhThuTheoNgay).forEach(function (ngay) {
                        doanhThuTheoNgay[ngay].rows.forEach(function (row) {
                            var newRow = document.createElement('tr');
                            newRow.innerHTML = `<td>${row.ngay}</td><td>${row.thu}</td>`;
                            tbody.appendChild(newRow);
                        });

                        var totalRow = document.createElement('tr');
                        totalRow.innerHTML = `<td><strong>Doanh thu ngày ${ngay}</strong></td><td>${doanhThuTheoNgay[ngay].tongThu}</td>`;
                        tbody.appendChild(totalRow);
                    });

                    // Update labels and data for chart
                    labels = Object.keys(doanhThuTheoNgay);
                    data = labels.map(function (ngay) {
                        return doanhThuTheoNgay[ngay].tongThu;
                    });

                    var ctx = document.getElementById('barChart').getContext('2d');
                    var barChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: labels,
                            datasets: [{
                                label: 'Doanh thu theo ngày',
                                data: data,
                                backgroundColor: 'rgba(75, 192, 192)',
                                borderColor: 'rgb(242, 47, 47)',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    });
   
                    data = labels.map(function (ngay) {
                        return doanhThuTheoNgay[ngay].tongThu;
                    });

                    var ctx2 = document.getElementById('barChartHome').getContext('2d');
                    var barChartHome = new Chart(ctx2, {
                        type: 'line',
                        data: {
                            labels: labels,
                            datasets: [{
                                label: 'Doanh thu theo ngày',
                                data: data,
                                backgroundColor: 'rgba(75, 192, 192)',
                                borderColor: 'rgb(242, 47, 47)',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    });

                    var numberOfDaysInMonth = lastDayOfMonth.diff(firstDayOfMonth, 'days') + 1;
                    var revenueForCurrentMonth = Object.keys(doanhThuTheoNgay)
                        .filter(function (ngay) {
                            return ngay.includes(currentMonth);
                        })
                        .map(function (ngay) {
                            return doanhThuTheoNgay[ngay].tongThu || 0; 
                        });

                    var averageRevenueMonth = revenueForCurrentMonth.length > 0
                        ? revenueForCurrentMonth.reduce((sum, value) => sum + value, 0) / numberOfDaysInMonth
                        : 0;

                    var totalRevenueMonth = revenueForCurrentMonth.reduce((sum, value) => sum + value, 0);

                    if (doanhThuTheoNgay.hasOwnProperty(currentDate)) {
                        var todayRevenue = doanhThuTheoNgay[currentDate].tongThu;
                        document.getElementById('day1Revenue').innerText = `${todayRevenue.toFixed(0)}VND`;
                    } else {
                        document.getElementById('day1Revenue').innerText = '0 VND';
                    }

                    var yesterdayDate = moment().subtract(1, 'days').format('DD/MM/YYYY');

                    if (doanhThuTheoNgay.hasOwnProperty(yesterdayDate)) {
                        var yesterdayRevenue = doanhThuTheoNgay[yesterdayDate].tongThu;
                        document.getElementById('day2Revenue').innerText = `${yesterdayRevenue.toFixed(0)}VND`;
                    } else {
                        document.getElementById('day2Revenue').innerText = '0 VND';
                    }
                    document.getElementById('todayRevenueValue').innerText = `${averageRevenueMonth.toFixed(0)}VND`;
                    document.getElementById('totalRevenueValue').innerText = `${totalRevenueMonth.toFixed(0)}VND`;
                });
            </script>





















